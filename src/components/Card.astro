---
// Define the props this component will accept
export interface Props {
    title: string;
    description: string;
    imageUrl: string;
    link: string;
    altText: string;
    imageWidth?: string; // Optional: To handle different image widths
    imageHeight?: string;
}

const {
    title,
    description,
    imageUrl,
    link,
    altText,
    imageWidth = "w-28",
    imageHeight = "h-auto",
} = Astro.props;
---

<a
    href={link}
    class:list={[
        "bg-white/30 backdrop-blur-lg rounded-lg p-7 shadow-md hover:shadow-lg",
        "transform hover:scale-105 hover:bg-white/70 hover:border-white/0",
        "transition duration-300 border-4 border-white xl:aspect-square",
        "flex flex-col justify-evenly",
    ]}
>
    <img
        src={imageUrl}
        alt={altText}
        class:list={["mb-4", imageWidth, imageHeight]}
    />
    <div class="justify-center">
        <h2 class="text-xl font-medium mb-2">{title}</h2>
        <p class="text-gray-600 break-normal text-pretty md:text-ellipsis">
            {description}
        </p>
    </div>
</a>
