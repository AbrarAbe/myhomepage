---
import "../styles/global.css";
import "../styles/menu.css";

import Head from "../components/Metadata.astro";
import Loader from "../components/Loader.astro";
import TextAnimation from "../components/TextAnimation.astro";
import LocalScripts from "../components/LocalScripts.astro";
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";

const { pageTitle, pageIcon } = Astro.props;
---

<html lang="en">
	<Head pagetitle={pageTitle} , pageIcon={pageIcon} />
	<body class="h-svh flex flex-col justify-center items-center">
		<main id="content">
			<Loader />
			<header class="container mx-auto">
				<TextAnimation />
			</header>
			<nav class="my-10 px-5" id="navigation-menu">
				<Navigation />
			</nav>
			<slot />
		</main>
		<Footer />
		<LocalScripts />
	</body>
</html>
